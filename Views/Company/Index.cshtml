@model List<LoanRecoveryCRM.Models.Company>
@{
    ViewData["Title"] = "Company Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-building me-2"></i>
                        Company Management
                    </h2>
                    <p class="text-muted mb-0">Manage companies and their administrators</p>
                </div>
                <button type="button" class="btn btn-primary btn-lg" id="addCompanyBtn">
                    <i class="fas fa-plus me-2"></i>Add Company
                </button>
            </div>

            <!-- Companies Grid -->
            <div class="row" id="companiesGrid">
                <!-- Company cards will be loaded here -->
            </div>

            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="text-center py-5" style="display: none;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading companies...</p>
            </div>

            <!-- No Data Message -->
            <div id="noDataMessage" class="text-center py-5" style="display: none;">
                <i class="fas fa-building fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No Companies Found</h4>
                <p class="text-muted">Click "Add Company" to create your first company.</p>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Company Modal -->
<div class="modal fade" id="companyModal" tabindex="-1" aria-labelledby="companyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="companyModalLabel">
                    <i class="fas fa-building me-2"></i>
                    <span id="modalTitle">Add Company</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="companyForm">
                    <input type="hidden" id="companyId" value="0">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="companyName" class="form-label">
                                <i class="fas fa-building me-1"></i>Company Name *
                            </label>
                            <input type="text" class="form-control" id="companyName" required maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="proprietorName" class="form-label">
                                <i class="fas fa-user me-1"></i>Proprietor Name *
                            </label>
                            <input type="text" class="form-control" id="proprietorName" required maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="contact" class="form-label">
                                <i class="fas fa-phone me-1"></i>Contact *
                            </label>
                            <input type="tel" class="form-control" id="contact" required maxlength="15" pattern="[0-9]{10}">
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>Email *
                            </label>
                            <input type="email" class="form-control" id="email" required maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="gstNo" class="form-label">
                                <i class="fas fa-file-invoice me-1"></i>GST No *
                            </label>
                            <input type="text" class="form-control" id="gstNo" required maxlength="15" pattern="[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}">
                            <div class="form-text">Format: 27ABCDE1234F1Z5</div>
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="isActive" class="form-label">
                                <i class="fas fa-toggle-on me-1"></i>Status
                            </label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="isActive" checked>
                                <label class="form-check-label" for="isActive">
                                    <span id="statusLabel">Active</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" id="saveCompanyBtn">
                    <i class="fas fa-save me-2"></i>Save Company
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete this company?</p>
                <p class="text-muted small">This action cannot be undone and will also delete all associated administrators.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Company Admin Management Modal -->
<div class="modal fade" id="adminModal" tabindex="-1" aria-labelledby="adminModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="adminModalLabel">
                    <i class="fas fa-users me-2"></i>
                    <span id="adminModalCompanyName">Company Administrators</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">Administrators</h6>
                    <button type="button" class="btn btn-success btn-sm" id="addAdminBtn">
                        <i class="fas fa-plus me-2"></i>Add Admin
                    </button>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-striped" id="adminsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Employee ID</th>
                                <th>Username</th>
                                <th>Status</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="adminsTableBody">
                            <!-- Admin rows will be loaded here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Admin Modal -->
<div class="modal fade" id="adminFormModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus me-2"></i>
                    <span id="adminFormTitle">Add Administrator</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="adminForm">
                    <input type="hidden" id="adminId" value="0">
                    <input type="hidden" id="adminCompanyId" value="0">
                    
                    <div class="mb-3">
                        <label for="adminName" class="form-label">Name *</label>
                        <input type="text" class="form-control" id="adminName" required maxlength="100">
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="employeeId" class="form-label">Employee ID *</label>
                        <input type="text" class="form-control" id="employeeId" required maxlength="20">
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="username" class="form-label">Username *</label>
                        <input type="text" class="form-control" id="username" required maxlength="50">
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password *</label>
                        <input type="password" class="form-control" id="password" required minlength="6">
                        <div class="form-text">Minimum 6 characters</div>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="adminIsActive" checked>
                            <label class="form-check-label" for="adminIsActive">Active</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" id="saveAdminBtn">
                    <i class="fas fa-save me-2"></i>Save Admin
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let companies = [];
        let currentCompanyId = 0;
        let currentAdminId = 0;

        $(document).ready(function() {
            loadCompanies();

            // Add Company Button
            $('#addCompanyBtn').click(function() {
                openCompanyModal();
            });

            // Save Company Button
            $('#saveCompanyBtn').click(function() {
                saveCompany();
            });

            // Status Toggle
            $('#isActive').change(function() {
                $('#statusLabel').text($(this).is(':checked') ? 'Active' : 'Inactive');
            });

            // Add Admin Button
            $('#addAdminBtn').click(function() {
                openAdminModal();
            });

            // Save Admin Button
            $('#saveAdminBtn').click(function() {
                saveAdmin();
            });

            // Delete Confirmation
            $('#confirmDeleteBtn').click(function() {
                deleteCompany();
            });
        });

        function loadCompanies() {
            $('#loadingIndicator').show();
            $('#companiesGrid').hide();
            $('#noDataMessage').hide();

            $.ajax({
                url: '@Url.Action("GetCompanies", "Company")',
                type: 'GET',
                success: function(data) {
                    companies = data;
                    renderCompanies();
                    $('#loadingIndicator').hide();
                },
                error: function() {
                    $('#loadingIndicator').hide();
                    showToast('Error loading companies.', 'error');
                }
            });
        }

        function renderCompanies() {
            const grid = $('#companiesGrid');
            grid.empty();

            if (companies.length === 0) {
                $('#noDataMessage').show();
                return;
            }

            companies.forEach(company => {
                const card = createCompanyCard(company);
                grid.append(card);
            });

            $('#companiesGrid').show();
        }

        function createCompanyCard(company) {
            const statusBadge = company.isActive 
                ? '<span class="badge bg-success">Active</span>'
                : '<span class="badge bg-danger">Inactive</span>';

            const statusToggle = company.isActive
                ? '<i class="fas fa-toggle-on text-success"></i>'
                : '<i class="fas fa-toggle-off text-muted"></i>';

            return `
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 company-card" data-company-id="${company.id}">
                        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
                            <h6 class="mb-0 text-truncate me-2">
                                <i class="fas fa-building me-2"></i>${company.companyName}
                            </h6>
                            ${statusBadge}
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <small class="text-muted">Proprietor</small>
                                <div class="fw-semibold">${company.proprietorName}</div>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">Contact</small>
                                <div><i class="fas fa-phone me-1"></i>${company.contact}</div>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">Email</small>
                                <div class="text-truncate"><i class="fas fa-envelope me-1"></i>${company.email}</div>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">GST No</small>
                                <div><i class="fas fa-file-invoice me-1"></i>${company.gstNo}</div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Administrators</small>
                                <div>
                                    <i class="fas fa-users me-1"></i>
                                    <span class="badge bg-info">${company.adminCount}</span>
                                    <button class="btn btn-link btn-sm p-0 ms-2" onclick="openAdminManagement(${company.id}, '${company.companyName}')">
                                        <i class="fas fa-cog"></i> Manage
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="editCompany(${company.id})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete(${company.id})" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                            <button type="button" class="btn btn-link btn-sm p-0" onclick="toggleStatus(${company.id})" title="Toggle Status">
                                ${statusToggle}
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }

        function openCompanyModal(company = null) {
            const modal = new bootstrap.Modal(document.getElementById('companyModal'));
            
            if (company) {
                $('#modalTitle').text('Edit Company');
                $('#companyId').val(company.id);
                $('#companyName').val(company.companyName);
                $('#proprietorName').val(company.proprietorName);
                $('#contact').val(company.contact);
                $('#email').val(company.email);
                $('#gstNo').val(company.gstNo);
                $('#isActive').prop('checked', company.isActive);
                $('#statusLabel').text(company.isActive ? 'Active' : 'Inactive');
            } else {
                $('#modalTitle').text('Add Company');
                $('#companyForm')[0].reset();
                $('#companyId').val(0);
                $('#isActive').prop('checked', true);
                $('#statusLabel').text('Active');
            }

            // Clear validation
            $('.form-control').removeClass('is-invalid');
            $('.invalid-feedback').text('');

            modal.show();
        }

        function saveCompany() {
            const companyId = parseInt($('#companyId').val());
            const isEdit = companyId > 0;

            const company = {
                id: companyId,
                companyName: $('#companyName').val().trim(),
                proprietorName: $('#proprietorName').val().trim(),
                contact: $('#contact').val().trim(),
                email: $('#email').val().trim(),
                gstNo: $('#gstNo').val().trim().toUpperCase(),
                isActive: $('#isActive').is(':checked')
            };

            // Client-side validation
            if (!validateCompanyForm(company)) {
                return;
            }

            const url = isEdit 
                ? `@Url.Action("UpdateCompany", "Company")/${companyId}`
                : '@Url.Action("CreateCompany", "Company")';
            
            const method = isEdit ? 'PUT' : 'POST';

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                data: JSON.stringify(company),
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        $('#companyModal').modal('hide');
                        loadCompanies();
                    } else {
                        showToast(response.message, 'error');
                        if (response.errors) {
                            displayValidationErrors(response.errors);
                        }
                    }
                },
                error: function() {
                    showToast('Error saving company.', 'error');
                }
            });
        }

        function validateCompanyForm(company) {
            let isValid = true;
            
            // Clear previous validation
            $('.form-control').removeClass('is-invalid');
            $('.invalid-feedback').text('');

            // Company Name
            if (!company.companyName) {
                $('#companyName').addClass('is-invalid');
                $('#companyName').siblings('.invalid-feedback').text('Company name is required.');
                isValid = false;
            }

            // Proprietor Name
            if (!company.proprietorName) {
                $('#proprietorName').addClass('is-invalid');
                $('#proprietorName').siblings('.invalid-feedback').text('Proprietor name is required.');
                isValid = false;
            }

            // Contact
            if (!company.contact) {
                $('#contact').addClass('is-invalid');
                $('#contact').siblings('.invalid-feedback').text('Contact is required.');
                isValid = false;
            } else if (!/^[0-9]{10}$/.test(company.contact)) {
                $('#contact').addClass('is-invalid');
                $('#contact').siblings('.invalid-feedback').text('Contact must be 10 digits.');
                isValid = false;
            }

            // Email
            if (!company.email) {
                $('#email').addClass('is-invalid');
                $('#email').siblings('.invalid-feedback').text('Email is required.');
                isValid = false;
            } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(company.email)) {
                $('#email').addClass('is-invalid');
                $('#email').siblings('.invalid-feedback').text('Please enter a valid email address.');
                isValid = false;
            }

            // GST No
            if (!company.gstNo) {
                $('#gstNo').addClass('is-invalid');
                $('#gstNo').siblings('.invalid-feedback').text('GST number is required.');
                isValid = false;
            } else if (!/^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$/.test(company.gstNo)) {
                $('#gstNo').addClass('is-invalid');
                $('#gstNo').siblings('.invalid-feedback').text('Please enter a valid GST number.');
                isValid = false;
            }

            return isValid;
        }

        function editCompany(id) {
            const company = companies.find(c => c.id === id);
            if (company) {
                openCompanyModal(company);
            }
        }

        function confirmDelete(id) {
            currentCompanyId = id;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        function deleteCompany() {
            $.ajax({
                url: `@Url.Action("DeleteCompany", "Company")/${currentCompanyId}`,
                type: 'DELETE',
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        $('#deleteModal').modal('hide');
                        loadCompanies();
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Error deleting company.', 'error');
                }
            });
        }

        function toggleStatus(id) {
            $.ajax({
                url: `@Url.Action("ToggleStatus", "Company")/${id}`,
                type: 'POST',
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        loadCompanies();
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Error updating company status.', 'error');
                }
            });
        }

        function openAdminManagement(companyId, companyName) {
            currentCompanyId = companyId;
            $('#adminModalCompanyName').text(`${companyName} - Administrators`);
            $('#adminCompanyId').val(companyId);
            
            const modal = new bootstrap.Modal(document.getElementById('adminModal'));
            modal.show();
            
            loadCompanyAdmins(companyId);
        }

        function loadCompanyAdmins(companyId) {
            $.ajax({
                url: `@Url.Action("GetCompanyAdmins", "Company")?companyId=${companyId}`,
                type: 'GET',
                success: function(data) {
                    renderAdmins(data);
                },
                error: function() {
                    showToast('Error loading administrators.', 'error');
                }
            });
        }

        function renderAdmins(admins) {
            const tbody = $('#adminsTableBody');
            tbody.empty();

            if (admins.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="fas fa-users fa-2x mb-2"></i>
                            <div>No administrators found</div>
                        </td>
                    </tr>
                `);
                return;
            }

            admins.forEach(admin => {
                const statusBadge = admin.isActive 
                    ? '<span class="badge bg-success">Active</span>'
                    : '<span class="badge bg-danger">Inactive</span>';

                const lastLogin = admin.lastLogin 
                    ? new Date(admin.lastLogin).toLocaleDateString()
                    : 'Never';

                tbody.append(`
                    <tr>
                        <td>${admin.name}</td>
                        <td>${admin.employeeId}</td>
                        <td>${admin.username}</td>
                        <td>${statusBadge}</td>
                        <td>${lastLogin}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary" onclick="editAdmin(${admin.id})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-outline-warning" onclick="resetPassword(${admin.id})" title="Reset Password">
                                    <i class="fas fa-key"></i>
                                </button>
                                <button class="btn btn-outline-danger" onclick="deleteAdmin(${admin.id})" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `);
            });
        }

        function openAdminModal(admin = null) {
            const modal = new bootstrap.Modal(document.getElementById('adminFormModal'));
            
            if (admin) {
                $('#adminFormTitle').text('Edit Administrator');
                $('#adminId').val(admin.id);
                $('#adminName').val(admin.name);
                $('#employeeId').val(admin.employeeId);
                $('#username').val(admin.username);
                $('#password').removeAttr('required').attr('placeholder', 'Leave blank to keep current password');
                $('#adminIsActive').prop('checked', admin.isActive);
            } else {
                $('#adminFormTitle').text('Add Administrator');
                $('#adminForm')[0].reset();
                $('#adminId').val(0);
                $('#password').attr('required', 'required').attr('placeholder', '');
                $('#adminIsActive').prop('checked', true);
            }

            // Clear validation
            $('.form-control').removeClass('is-invalid');
            $('.invalid-feedback').text('');

            modal.show();
        }

        function saveAdmin() {
            const adminId = parseInt($('#adminId').val());
            const isEdit = adminId > 0;

            const admin = {
                id: adminId,
                companyId: currentCompanyId,
                name: $('#adminName').val().trim(),
                employeeId: $('#employeeId').val().trim(),
                username: $('#username').val().trim(),
                password: $('#password').val(),
                isActive: $('#adminIsActive').is(':checked')
            };

            const url = isEdit 
                ? `@Url.Action("UpdateAdmin", "Company")/${adminId}`
                : '@Url.Action("CreateAdmin", "Company")';
            
            const method = isEdit ? 'PUT' : 'POST';

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                data: JSON.stringify(admin),
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        $('#adminFormModal').modal('hide');
                        loadCompanyAdmins(currentCompanyId);
                        loadCompanies(); // Refresh admin count
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Error saving administrator.', 'error');
                }
            });
        }

        function editAdmin(id) {
            // For simplicity, we'll reload the admin data
            // In a real application, you might want to cache this data
            $.ajax({
                url: `@Url.Action("GetCompanyAdmins", "Company")?companyId=${currentCompanyId}`,
                type: 'GET',
                success: function(data) {
                    const admin = data.find(a => a.id === id);
                    if (admin) {
                        openAdminModal(admin);
                    }
                }
            });
        }

        function deleteAdmin(id) {
            if (confirm('Are you sure you want to delete this administrator?')) {
                $.ajax({
                    url: `@Url.Action("DeleteAdmin", "Company")/${id}`,
                    type: 'DELETE',
                    success: function(response) {
                        if (response.success) {
                            showToast(response.message, 'success');
                            loadCompanyAdmins(currentCompanyId);
                            loadCompanies(); // Refresh admin count
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function() {
                        showToast('Error deleting administrator.', 'error');
                    }
                });
            }
        }

        function resetPassword(id) {
            const newPassword = prompt('Enter new password (minimum 6 characters):');
            if (newPassword && newPassword.length >= 6) {
                $.ajax({
                    url: `@Url.Action("ResetPassword", "Company")/${id}`,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(newPassword),
                    success: function(response) {
                        if (response.success) {
                            showToast(response.message, 'success');
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function() {
                        showToast('Error resetting password.', 'error');
                    }
                });
            } else if (newPassword !== null) {
                alert('Password must be at least 6 characters long.');
            }
        }

        function showToast(message, type) {
            // Use the existing toast function from site.js
            if (window.CRM && window.CRM.showToast) {
                window.CRM.showToast(message, type);
            } else {
                // Fallback alert
                alert(message);
            }
        }
    </script>
}

