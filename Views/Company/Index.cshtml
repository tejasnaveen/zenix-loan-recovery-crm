@model List<LoanRecoveryCRM.Models.Company>
@{
    ViewData["Title"] = "Company Management";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-building me-2 text-primary"></i>
                        Company Management
                    </h2>
                    <p class="text-muted mb-0">Manage your companies with ease</p>
                </div>
                <button type="button" class="btn btn-primary btn-lg" id="addCompanyBtn">
                    <i class="fas fa-plus me-2"></i>Add New Company
                </button>
            </div>
        </div>
    </div>

    <!-- Companies Cards Grid -->
    <div class="row" id="companiesGrid">
        <!-- Company cards will be loaded here -->
    </div>

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <h5 class="text-muted">Loading companies...</h5>
    </div>

    <!-- No Data Message -->
    <div id="noDataMessage" class="text-center py-5" style="display: none;">
        <div class="mb-4">
            <i class="fas fa-building fa-4x text-muted mb-3"></i>
            <h3 class="text-muted mb-2">No Companies Found</h3>
            <p class="text-muted mb-4">Get started by adding your first company</p>
            <button type="button" class="btn btn-primary btn-lg" onclick="$('#addCompanyBtn').click()">
                <i class="fas fa-plus me-2"></i>Add Your First Company
            </button>
        </div>
    </div>
</div>

<!-- Add/Edit Company Modal -->
<div class="modal fade" id="companyModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="companyModalLabel">
                    <i class="fas fa-building me-2"></i>
                    <span id="modalTitle">Add Company</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="companyForm">
                    <input type="hidden" id="companyId" value="0">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="companyName" class="form-label">Company Name *</label>
                            <input type="text" class="form-control" id="companyName" required maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="proprietorName" class="form-label">Proprietor Name *</label>
                            <input type="text" class="form-control" id="proprietorName" required maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="contact" class="form-label">Contact *</label>
                            <input type="tel" class="form-control" id="contact" required maxlength="15">
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="email" required maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="gstNo" class="form-label">GST No *</label>
                            <input type="text" class="form-control" id="gstNo" required maxlength="15">
                            <div class="form-text">Format: 27ABCDE1234F1Z5</div>
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="isActive" class="form-label">Status</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="isActive" checked>
                                <label class="form-check-label" for="isActive">
                                    <span id="statusLabel">Active</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveCompanyBtn">
                    <i class="fas fa-save me-2"></i>Save Company
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete this company?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Company Admin Management Modal -->
<div class="modal fade" id="adminModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-users me-2"></i>
                    <span id="adminModalCompanyName">Company Administrators</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">Administrators</h6>
                    <button type="button" class="btn btn-success btn-sm" id="addAdminBtn">
                        <i class="fas fa-plus me-2"></i>Add Admin
                    </button>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-striped" id="adminsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Employee ID</th>
                                <th>Username</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="adminsTableBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Admin Modal -->
<div class="modal fade" id="adminFormModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus me-2"></i>
                    <span id="adminFormTitle">Add Administrator</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="adminForm">
                    <input type="hidden" id="adminId" value="0">
                    <input type="hidden" id="adminCompanyId" value="0">
                    
                    <div class="mb-3">
                        <label for="adminName" class="form-label">Name *</label>
                        <input type="text" class="form-control" id="adminName" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="employeeId" class="form-label">Employee ID *</label>
                        <input type="text" class="form-control" id="employeeId" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="username" class="form-label">Username *</label>
                        <input type="text" class="form-control" id="username" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password *</label>
                        <input type="password" class="form-control" id="password" required>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="adminIsActive" checked>
                            <label class="form-check-label" for="adminIsActive">Active</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" id="saveAdminBtn">Save Admin</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let companies = [];
        let currentCompanyId = 0;

        $(document).ready(function() {
            loadCompanies();

            $('#addCompanyBtn').click(function() {
                openCompanyModal();
            });

            $('#saveCompanyBtn').click(function() {
                saveCompany();
            });

            $('#isActive').change(function() {
                $('#statusLabel').text($(this).is(':checked') ? 'Active' : 'Inactive');
            });

            $('#addAdminBtn').click(function() {
                openAdminModal();
            });

            $('#saveAdminBtn').click(function() {
                saveAdmin();
            });

            $('#confirmDeleteBtn').click(function() {
                deleteCompany();
            });
        });

        function loadCompanies() {
            $('#loadingIndicator').show();
            $('#companiesGrid').hide();
            $('#noDataMessage').hide();

            $.ajax({
                url: '@Url.Action("GetCompanies", "Company")',
                type: 'GET',
                success: function(data) {
                    companies = data;
                    renderCompanies();
                    $('#loadingIndicator').hide();
                },
                error: function() {
                    $('#loadingIndicator').hide();
                    showToast('Error loading companies.', 'error');
                }
            });
        }

        function renderCompanies() {
            const grid = $('#companiesGrid');
            grid.empty();

            if (companies.length === 0) {
                $('#noDataMessage').show();
                return;
            }

            companies.forEach(company => {
                const card = createCompanyCard(company);
                grid.append(card);
            });

            $('#companiesGrid').show();
        }

        function createCompanyCard(company) {
            const statusBadge = company.isActive 
                ? '<span class="badge bg-success">Active</span>'
                : '<span class="badge bg-danger">Inactive</span>';

            const statusIcon = company.isActive
                ? '<i class="fas fa-toggle-on text-success fs-4"></i>'
                : '<i class="fas fa-toggle-off text-muted fs-4"></i>';

            return `
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card company-card h-100 shadow-sm border-0">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-0">${company.companyName}</h5>
                                    <small class="text-white-50">ID: ${company.id}</small>
                                </div>
                                ${statusBadge}
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="company-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="fas fa-user-tie text-primary me-2"></i>
                                    <strong>Proprietor:</strong> ${company.proprietorName}
                                </div>
                                <div class="info-item mb-2">
                                    <i class="fas fa-phone text-success me-2"></i>
                                    <strong>Contact:</strong> 
                                    <a href="tel:${company.contact}" class="text-decoration-none">${company.contact}</a>
                                </div>
                                <div class="info-item mb-2">
                                    <i class="fas fa-envelope text-info me-2"></i>
                                    <strong>Email:</strong> 
                                    <a href="mailto:${company.email}" class="text-decoration-none text-truncate d-block">${company.email}</a>
                                </div>
                                <div class="info-item mb-2">
                                    <i class="fas fa-file-invoice text-warning me-2"></i>
                                    <strong>GST:</strong> <code>${company.gstNo}</code>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-users text-purple me-2"></i>
                                    <strong>Admins:</strong> 
                                    <span class="badge bg-info">${company.adminCount}</span>
                                    <button class="btn btn-link btn-sm p-0 ms-2" onclick="openAdminManagement(${company.id}, '${company.companyName}')">
                                        <i class="fas fa-cog"></i> Manage
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button class="btn btn-outline-primary btn-sm" onclick="editCompany(${company.id})" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm" onclick="confirmDelete(${company.id})" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                                <button class="btn btn-link p-0" onclick="toggleStatus(${company.id})" title="Toggle Status">
                                    ${statusIcon}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function openCompanyModal(company = null) {
            const modal = new bootstrap.Modal(document.getElementById('companyModal'));
            
            if (company) {
                $('#modalTitle').text('Edit Company');
                $('#companyId').val(company.id);
                $('#companyName').val(company.companyName);
                $('#proprietorName').val(company.proprietorName);
                $('#contact').val(company.contact);
                $('#email').val(company.email);
                $('#gstNo').val(company.gstNo);
                $('#isActive').prop('checked', company.isActive);
                $('#statusLabel').text(company.isActive ? 'Active' : 'Inactive');
            } else {
                $('#modalTitle').text('Add Company');
                $('#companyForm')[0].reset();
                $('#companyId').val(0);
                $('#isActive').prop('checked', true);
                $('#statusLabel').text('Active');
            }

            $('.form-control').removeClass('is-invalid');
            $('.invalid-feedback').text('');
            modal.show();
        }

        function saveCompany() {
            const companyId = parseInt($('#companyId').val());
            const isEdit = companyId > 0;

            const company = {
                id: companyId,
                companyName: $('#companyName').val().trim(),
                proprietorName: $('#proprietorName').val().trim(),
                contact: $('#contact').val().trim(),
                email: $('#email').val().trim(),
                gstNo: $('#gstNo').val().trim().toUpperCase(),
                isActive: $('#isActive').is(':checked')
            };

            if (!validateCompanyForm(company)) {
                return;
            }

            const url = isEdit 
                ? `@Url.Action("UpdateCompany", "Company")/${companyId}`
                : '@Url.Action("CreateCompany", "Company")';
            
            const method = isEdit ? 'PUT' : 'POST';

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                data: JSON.stringify(company),
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        $('#companyModal').modal('hide');
                        loadCompanies();
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Error saving company.', 'error');
                }
            });
        }

        function validateCompanyForm(company) {
            let isValid = true;
            
            $('.form-control').removeClass('is-invalid');
            $('.invalid-feedback').text('');

            if (!company.companyName) {
                $('#companyName').addClass('is-invalid');
                $('#companyName').siblings('.invalid-feedback').text('Company name is required.');
                isValid = false;
            }

            if (!company.proprietorName) {
                $('#proprietorName').addClass('is-invalid');
                $('#proprietorName').siblings('.invalid-feedback').text('Proprietor name is required.');
                isValid = false;
            }

            if (!company.contact) {
                $('#contact').addClass('is-invalid');
                $('#contact').siblings('.invalid-feedback').text('Contact is required.');
                isValid = false;
            }

            if (!company.email) {
                $('#email').addClass('is-invalid');
                $('#email').siblings('.invalid-feedback').text('Email is required.');
                isValid = false;
            }

            if (!company.gstNo) {
                $('#gstNo').addClass('is-invalid');
                $('#gstNo').siblings('.invalid-feedback').text('GST number is required.');
                isValid = false;
            }

            return isValid;
        }

        function editCompany(id) {
            const company = companies.find(c => c.id === id);
            if (company) {
                openCompanyModal(company);
            }
        }

        function confirmDelete(id) {
            currentCompanyId = id;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        function deleteCompany() {
            $.ajax({
                url: `@Url.Action("DeleteCompany", "Company")/${currentCompanyId}`,
                type: 'DELETE',
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        $('#deleteModal').modal('hide');
                        loadCompanies();
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Error deleting company.', 'error');
                }
            });
        }

        function toggleStatus(id) {
            $.ajax({
                url: `@Url.Action("ToggleStatus", "Company")/${id}`,
                type: 'POST',
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        loadCompanies();
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Error updating status.', 'error');
                }
            });
        }

        function openAdminManagement(companyId, companyName) {
            currentCompanyId = companyId;
            $('#adminModalCompanyName').text(`${companyName} - Administrators`);
            $('#adminCompanyId').val(companyId);
            
            const modal = new bootstrap.Modal(document.getElementById('adminModal'));
            modal.show();
            
            loadCompanyAdmins(companyId);
        }

        function loadCompanyAdmins(companyId) {
            $.ajax({
                url: `@Url.Action("GetCompanyAdmins", "Company")?companyId=${companyId}`,
                type: 'GET',
                success: function(data) {
                    renderAdmins(data);
                },
                error: function() {
                    showToast('Error loading administrators.', 'error');
                }
            });
        }

        function renderAdmins(admins) {
            const tbody = $('#adminsTableBody');
            tbody.empty();

            if (admins.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No administrators found
                        </td>
                    </tr>
                `);
                return;
            }

            admins.forEach(admin => {
                const statusBadge = admin.isActive 
                    ? '<span class="badge bg-success">Active</span>'
                    : '<span class="badge bg-danger">Inactive</span>';

                tbody.append(`
                    <tr>
                        <td>${admin.name}</td>
                        <td>${admin.employeeId}</td>
                        <td>${admin.username}</td>
                        <td>${statusBadge}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary" onclick="editAdmin(${admin.id})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-outline-warning" onclick="resetPassword(${admin.id})" title="Reset Password">
                                    <i class="fas fa-key"></i>
                                </button>
                                <button class="btn btn-outline-danger" onclick="deleteAdmin(${admin.id})" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `);
            });
        }

        function openAdminModal(admin = null) {
            const modal = new bootstrap.Modal(document.getElementById('adminFormModal'));
            
            if (admin) {
                $('#adminFormTitle').text('Edit Administrator');
                $('#adminId').val(admin.id);
                $('#adminName').val(admin.name);
                $('#employeeId').val(admin.employeeId);
                $('#username').val(admin.username);
                $('#password').removeAttr('required').attr('placeholder', 'Leave blank to keep current');
                $('#adminIsActive').prop('checked', admin.isActive);
            } else {
                $('#adminFormTitle').text('Add Administrator');
                $('#adminForm')[0].reset();
                $('#adminId').val(0);
                $('#adminCompanyId').val(currentCompanyId);
                $('#password').attr('required', 'required').attr('placeholder', '');
                $('#adminIsActive').prop('checked', true);
            }

            modal.show();
        }

        function saveAdmin() {
            const adminId = parseInt($('#adminId').val());
            const isEdit = adminId > 0;

            const admin = {
                id: adminId,
                companyId: currentCompanyId,
                name: $('#adminName').val().trim(),
                employeeId: $('#employeeId').val().trim(),
                username: $('#username').val().trim(),
                password: $('#password').val(),
                isActive: $('#adminIsActive').is(':checked')
            };

            const url = isEdit 
                ? `@Url.Action("UpdateAdmin", "Company")/${adminId}`
                : '@Url.Action("CreateAdmin", "Company")';
            
            const method = isEdit ? 'PUT' : 'POST';

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                data: JSON.stringify(admin),
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        $('#adminFormModal').modal('hide');
                        loadCompanyAdmins(currentCompanyId);
                        loadCompanies();
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Error saving administrator.', 'error');
                }
            });
        }

        function editAdmin(id) {
            $.ajax({
                url: `@Url.Action("GetCompanyAdmins", "Company")?companyId=${currentCompanyId}`,
                type: 'GET',
                success: function(data) {
                    const admin = data.find(a => a.id === id);
                    if (admin) {
                        openAdminModal(admin);
                    }
                }
            });
        }

        function deleteAdmin(id) {
            if (confirm('Are you sure you want to delete this administrator?')) {
                $.ajax({
                    url: `@Url.Action("DeleteAdmin", "Company")/${id}`,
                    type: 'DELETE',
                    success: function(response) {
                        if (response.success) {
                            showToast(response.message, 'success');
                            loadCompanyAdmins(currentCompanyId);
                            loadCompanies();
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function() {
                        showToast('Error deleting administrator.', 'error');
                    }
                });
            }
        }

        function resetPassword(id) {
            const newPassword = prompt('Enter new password (minimum 6 characters):');
            if (newPassword && newPassword.length >= 6) {
                $.ajax({
                    url: `@Url.Action("ResetPassword", "Company")/${id}`,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(newPassword),
                    success: function(response) {
                        if (response.success) {
                            showToast(response.message, 'success');
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function() {
                        showToast('Error resetting password.', 'error');
                    }
                });
            } else if (newPassword !== null) {
                alert('Password must be at least 6 characters long.');
            }
        }

        function showToast(message, type) {
            if (window.CRM && window.CRM.showToast) {
                window.CRM.showToast(message, type);
            } else {
                alert(message);
            }
        }
    </script>
}

@section Styles {
    <style>
        .company-card {
            transition: all 0.3s ease;
            border-radius: 12px;
            overflow: hidden;
        }
        
        .company-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }
        
        .card-header {
            border-radius: 12px 12px 0 0 !important;
        }
        
        .company-info .info-item {
            font-size: 0.9rem;
            line-height: 1.4;
        }
        
        .text-purple {
            color: #6f42c1 !important;
        }
        
        .text-white-50 {
            color: rgba(255, 255, 255, 0.5) !important;
